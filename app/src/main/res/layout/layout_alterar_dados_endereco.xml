<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey11"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/alterar_dados"
            android:textColor="@color/GhostWhite"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView65"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/cep"
            android:textColor="@color/grey11"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextCadatroCepCadastro3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_campo_text"
            android:drawableLeft="@drawable/ic_baseline_view_compact_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="9"
            android:padding="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView66"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/numeroDaCasa"
            android:textColor="@color/grey11"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextNumeroCasaCadastro3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_campo_text"
            android:drawableLeft="@drawable/ic_baseline_home_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="4"
            android:padding="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Rua"
            android:textColor="@color/grey11"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextRua3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_campo_text"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:enabled="true"
            android:inputType="textMultiLine"
            android:maxLength="80"
            android:maxLines="3"
            android:padding="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textdfdView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Bairro"
            android:textColor="@color/grey11"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextBairro3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_campo_text"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:enabled="true"
            android:inputType="textMultiLine"
            android:maxLength="15"
            android:maxLines="3"
            android:padding="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp"
            android:text="@string/complemento"
            android:textColor="@color/grey11"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextComplementoCadastro3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_campo_text"
            android:drawablePadding="10dp"
            android:ems="10"
            android:enabled="true"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLength="110"
            android:maxLines="5"
            android:padding="10dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/buttonCAncelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/cancelar"
            android:theme="@style/Theme.BergBurgDelivery_custom_amarelo" />

        <Button
            android:id="@+id/buttonConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="@string/confirmar" />
    </LinearLayout>

</LinearLayout>